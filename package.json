{
    "name": "lisaan-i18n-kit",
    "version": "0.1.0",
    "description": "A unified i18n kit for React and Next.js with Arabic-first support.",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup src/index.ts --dts",
        "test": "jest",
        "lint": "eslint . --ext .ts,.tsx",
        "prepublishOnly": "npm run build && npm test"
    },
    "keywords": [
        "i18n",
        "react",
        "nextjs",
        "translation",
        "arabic",
        "localization",
        "internationalization"
    ],
    "author": "Reham elsayed",
    "license": "MIT",
    "peerDependencies": {
        "i18next": "^23.16.8",
        "next": "^15.5.0",
        "next-i18next": "^14.0.3",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-i18next": "^13.5.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^20.19.11",
        "@types/react": "^18.3.24",
        "@types/react-dom": "^18.3.7",
        "eslint": "^8.57.1",
        "eslint-config-next": "^13.5.11",
        "jest": "^29.7.0",
        "ts-jest": "^29.4.1",
        "tsup": "^7.2.0",
        "typescript": "^5.9.2"
    },
    "directories": {
        "example": "examples",
        "test": "tests"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/reham-elsayed/lisan-i18n.git"
    },
    "bugs": {
        "url": "https://github.com/reham-elsayed/lisan-i18n/issues"
    },
    "homepage": "https://github.com/reham-elsayed/lisan-i18n#readme"
}